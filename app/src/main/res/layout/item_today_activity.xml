<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_inventory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="10dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_constraint"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="ID: AB28682"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_activity_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Testing Activity"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/txt_id"
                app:layout_constraintTop_toBottomOf="@id/txt_id" />

            <TextView
                android:id="@+id/txt_supervisor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Supervisor: Abcdefgh"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@id/txt_id"
                app:layout_constraintTop_toBottomOf="@id/txt_activity_type" />

            <TextView
                android:id="@+id/txt_fwp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                android:text="Fwp: Name1, Name2"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@id/layout_constraint"
                app:layout_constraintStart_toStartOf="@id/txt_id"
                app:layout_constraintTop_toBottomOf="@id/txt_supervisor"
                app:layout_constraintVertical_bias="0" />


            <TextView
                android:id="@+id/txt_time_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:text="10:00 AM - 12:00 PM"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@id/layout_constraint"
                app:layout_constraintTop_toTopOf="@id/layout_constraint" />

            <TextView
                android:id="@+id/txt_outlet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Noida"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@id/txt_time_range"
                app:layout_constraintTop_toBottomOf="@id/txt_time_range" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>