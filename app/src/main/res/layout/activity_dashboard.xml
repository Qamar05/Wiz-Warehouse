<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_survey"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".dashboard.DashboardActivity">

    <!-- Main Content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/survey_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-40dp"
            android:contentDescription="@string/img_top"
            android:src="@drawable/img_survey_top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_survey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dashboard"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.05" />

        <LinearLayout
            android:id="@+id/layout_navigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@id/txt_survey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.95"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/txt_survey">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/img_profile_new" />

            <TextView
                android:id="@+id/txt_name_dashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/img_down"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/img_down"
                android:src="@drawable/arrow_drop_down" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_attendance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:elevation="10dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_top"
            app:layout_constraintWidth_percent="0.9">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_check_in"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/img_check_in"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:contentDescription="@string/check_in"
                    android:src="@drawable/check_in_bg"
                    app:layout_constraintEnd_toEndOf="@id/layout_check_in"
                    app:layout_constraintStart_toStartOf="@id/layout_check_in"
                    app:layout_constraintTop_toTopOf="@id/layout_check_in" />

                <ImageView
                    android:id="@+id/img_refresh_location"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="20dp"
                    android:contentDescription="@string/refresh"
                    android:src="@drawable/img_refresh_location"
                    app:layout_constraintEnd_toEndOf="@id/layout_check_in"
                    app:layout_constraintTop_toTopOf="@id/img_check_in" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    app:layout_constraintBottom_toBottomOf="@id/layout_check_in"
                    app:layout_constraintEnd_toEndOf="@id/layout_check_in"
                    app:layout_constraintStart_toStartOf="@id/layout_check_in"
                    app:layout_constraintTop_toBottomOf="@id/img_check_in"
                    app:layout_constraintVertical_bias="0"
                    app:layout_constraintWidth_percent="0.9">

                    <ImageView
                        android:id="@+id/img_location_pin"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="10dp"
                        android:contentDescription="@string/location_pin"
                        android:src="@drawable/img_location_pin" />

                    <TextView
                        android:id="@+id/txt_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text=""
                        android:textColor="@color/light_grey" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_total_stock"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:elevation="10dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintStart_toStartOf="@id/card_attendance"
            app:layout_constraintTop_toBottomOf="@id/card_attendance"
            app:layout_constraintWidth_percent="0.41">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_total_stock"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/img_total_stock"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:contentDescription="@string/total_stock"
                    android:src="@drawable/inventory_img"
                    app:layout_constraintStart_toStartOf="@id/layout_total_stock"
                    app:layout_constraintTop_toTopOf="@id/layout_total_stock" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="@string/total_stock"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/img_total_stock"
                    app:layout_constraintStart_toEndOf="@id/img_total_stock" />

                <TextView
                    android:id="@+id/txt_total_stock_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_250_units"
                    android:textColor="@color/purple_500"
                    android:textSize="25sp"
                    app:layout_constraintBottom_toBottomOf="@id/layout_total_stock"
                    app:layout_constraintStart_toStartOf="@id/img_total_stock"
                    app:layout_constraintTop_toBottomOf="@id/img_total_stock" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="3dp"
                    android:text="@string/units"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@id/txt_total_stock_number"
                    app:layout_constraintStart_toEndOf="@id/txt_total_stock_number" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_stock_assigned"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:elevation="10dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="@id/card_attendance"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintTop_toBottomOf="@id/card_attendance"
            app:layout_constraintWidth_percent="0.41">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_stock_assigned"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/img_stock_assigned"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:contentDescription="@string/img_stock"
                    android:src="@drawable/distribute_img"
                    app:layout_constraintStart_toStartOf="@id/layout_stock_assigned"
                    app:layout_constraintTop_toTopOf="@id/layout_stock_assigned" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="@string/stock_assigned"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/img_stock_assigned"
                    app:layout_constraintStart_toEndOf="@id/img_stock_assigned" />

                <TextView
                    android:id="@+id/txt_stock_assigned_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_200_units"
                    android:textColor="@color/purple_500"
                    android:textSize="25sp"
                    app:layout_constraintBottom_toBottomOf="@id/layout_stock_assigned"
                    app:layout_constraintStart_toStartOf="@id/img_stock_assigned"
                    app:layout_constraintTop_toBottomOf="@id/img_stock_assigned" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="3dp"
                    android:text="@string/units"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@id/txt_stock_assigned_number"
                    app:layout_constraintStart_toEndOf="@id/txt_stock_assigned_number" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_pending_return"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:elevation="10dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintStart_toStartOf="@id/card_total_stock"
            app:layout_constraintTop_toBottomOf="@id/card_total_stock"
            app:layout_constraintWidth_percent="0.41">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_pending_return"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/img_pending_return"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:contentDescription="@string/pending_return"
                    android:src="@drawable/return_img"
                    app:layout_constraintStart_toStartOf="@id/layout_pending_return"
                    app:layout_constraintTop_toTopOf="@id/layout_pending_return" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="@string/pending_return"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/img_pending_return"
                    app:layout_constraintStart_toEndOf="@id/img_pending_return" />

                <TextView
                    android:id="@+id/txt_pending_return_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_50_units"
                    android:textColor="@color/purple_500"
                    android:textSize="25sp"
                    app:layout_constraintBottom_toBottomOf="@id/layout_pending_return"
                    app:layout_constraintStart_toStartOf="@id/img_pending_return"
                    app:layout_constraintTop_toBottomOf="@id/img_pending_return" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="3dp"
                    android:text="@string/units"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@id/txt_pending_return_number"
                    app:layout_constraintStart_toEndOf="@id/txt_pending_return_number" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_activity"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:elevation="10dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="@id/card_stock_assigned"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintTop_toBottomOf="@id/card_stock_assigned"
            app:layout_constraintWidth_percent="0.41">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_activity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/img_activity"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:contentDescription="@string/img_activity"
                    android:src="@drawable/activity_img"
                    app:layout_constraintStart_toStartOf="@id/layout_activity"
                    app:layout_constraintTop_toTopOf="@id/layout_activity" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="@string/today_s_activity"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/img_activity"
                    app:layout_constraintStart_toEndOf="@id/img_activity" />

                <TextView
                    android:id="@+id/txt_today_activity_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_5"
                    android:textColor="@color/purple_500"
                    android:textSize="25sp"
                    app:layout_constraintBottom_toBottomOf="@id/layout_activity"
                    app:layout_constraintStart_toStartOf="@id/img_activity"
                    app:layout_constraintTop_toBottomOf="@id/img_activity" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="3dp"
                    android:text="@string/activities"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@id/txt_today_activity_number"
                    app:layout_constraintStart_toEndOf="@id/txt_today_activity_number" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txt_quick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/quick_access"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/card_pending_return"
            app:layout_constraintTop_toBottomOf="@id/card_pending_return" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_inventory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_text_background"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_quick"
            app:layout_constraintWidth_percent="0.9">

            <ImageView
                android:id="@+id/img_inventory"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:contentDescription="@string/dashboard"
                android:src="@drawable/inventory_img"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/inventory"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/img_inventory"
                app:layout_constraintStart_toEndOf="@id/img_inventory"
                app:layout_constraintTop_toTopOf="@id/img_inventory" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:contentDescription="@string/arrow"
                android:src="@drawable/baseline_arrow_forward_ios_24"
                app:layout_constraintBottom_toBottomOf="@id/img_inventory"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/img_inventory" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_distribute"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_text_background"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_inventory"
            app:layout_constraintWidth_percent="0.9">

            <ImageView
                android:id="@+id/img_distribute"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:contentDescription="@string/dashboard"
                android:src="@drawable/distribute_img"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/distribute"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/img_distribute"
                app:layout_constraintStart_toEndOf="@id/img_distribute"
                app:layout_constraintTop_toTopOf="@id/img_distribute" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:contentDescription="@string/arrow"
                android:src="@drawable/baseline_arrow_forward_ios_24"
                app:layout_constraintBottom_toBottomOf="@id/img_distribute"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/img_distribute" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_return"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_text_background"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_distribute"
            app:layout_constraintWidth_percent="0.9">

            <ImageView
                android:id="@+id/img_return"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:contentDescription="@string/dashboard"
                android:src="@drawable/return_img"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/return_"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/img_return"
                app:layout_constraintStart_toEndOf="@id/img_return"
                app:layout_constraintTop_toTopOf="@id/img_return" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:contentDescription="@string/arrow"
                android:src="@drawable/baseline_arrow_forward_ios_24"
                app:layout_constraintBottom_toBottomOf="@id/img_return"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/img_return" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/txt_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/version"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.95" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Navigation Drawer Content Inside FrameLayout -->
    <FrameLayout
        android:id="@+id/custom_nav_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- Profile Section -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_edit_profile"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_edit_profile"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/img_profile_new"
                    app:civ_border_color="@color/purple_500"
                    app:civ_border_width="2dp"
                    app:layout_constraintStart_toStartOf="@id/layout_edit_profile"
                    app:layout_constraintTop_toTopOf="@id/layout_edit_profile" />

                <TextView
                    android:id="@+id/nav_txt_name_dashboard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textColor="@color/purple_500"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/img_edit_profile"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.1"
                    app:layout_constraintStart_toEndOf="@id/img_edit_profile"
                    app:layout_constraintTop_toTopOf="@id/img_edit_profile"
                    app:layout_constraintVertical_bias="0.1" />

                <TextView
                    android:id="@+id/nav_txt_email_dashboard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/light_grey"
                    android:textSize="16sp"
                    app:layout_constraintHorizontal_bias="0.1"
                    app:layout_constraintStart_toStartOf="@id/nav_txt_name_dashboard"
                    app:layout_constraintTop_toBottomOf="@id/nav_txt_name_dashboard"
                    app:layout_constraintVertical_bias="0.1" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
