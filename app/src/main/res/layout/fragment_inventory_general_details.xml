<!--                app:layout_constraintTop_toBottomOf="@id/txt_total_items"-->
<!--                app:layout_constraintWidth_percent="0.9" />-->

            <TextView
                android:id="@+id/txt_receiver_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/_2_receiver_s_image"
                android:textColor="@color/purple_500"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/txt_general_details"
                app:layout_constraintTop_toBottomOf="@id/txt_general_details" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_receiver_images"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_background"
                android:orientation="horizontal"
                android:padding="5dp"
                app:layout_constraintEnd_toEndOf="@id/constraint_1"
                app:layout_constraintStart_toStartOf="@id/constraint_1"
                app:layout_constraintTop_toBottomOf="@id/txt_receiver_img"
                app:layout_constraintWidth_percent="0.9" />
            <ImageView
                android:id="@+id/camera_receiver_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:contentDescription="@string/camera"
                android:src="@drawable/baseline_camera_alt_24"
                app:layout_constraintBottom_toBottomOf="@id/recycler_receiver_images"
                app:layout_constraintEnd_toEndOf="@id/recycler_receiver_images"
                app:layout_constraintTop_toTopOf="@id/recycler_receiver_images" />

            <TextView
                android:id="@+id/txt_receiver_signature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/_3_receiver_s_signature"
                android:textColor="@color/purple_500"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/txt_general_details"
                app:layout_constraintTop_toBottomOf="@id/recycler_receiver_images" />

            <ImageView
                android:id="@+id/img_signature"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_text_background"
                android:contentDescription="@string/signature"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="@id/constraint_1"
                app:layout_constraintStart_toStartOf="@id/constraint_1"
                app:layout_constraintTop_toBottomOf="@id/txt_receiver_signature"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintWidth_percent="0.9" />

            <TextView
                android:id="@+id/txt_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_add_bg"
                android:gravity="center"
                android:paddingStart="15dp"
                android:paddingTop="5dp"
                android:paddingEnd="15dp"
                android:paddingBottom="5dp"
                android:text="@string/add"
                android:textColor="@color/purple_500"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@id/img_signature"
                app:layout_constraintEnd_toEndOf="@id/img_signature"
                app:layout_constraintHorizontal_bias="0.95"
                app:layout_constraintStart_toStartOf="@id/img_signature"
                app:layout_constraintTop_toTopOf="@id/img_signature"
                app:layout_constraintVertical_bias="0.95" />

            <TextView
                android:id="@+id/txt_delivery_agent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/_4_enter_delivery_agent_s_name"
                android:textColor="@color/purple_500"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/txt_general_details"
                app:layout_constraintTop_toBottomOf="@id/img_signature" />

            <EditText
                android:id="@+id/edit_delivery_agent"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_background"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                app:layout_constraintEnd_toEndOf="@id/constraint_1"
                app:layout_constraintStart_toStartOf="@id/constraint_1"
                app:layout_constraintTop_toBottomOf="@id/txt_delivery_agent"
                app:layout_constraintWidth_percent="0.9" />

            <TextView
                android:id="@+id/txt_delivery_agent_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/_5_delivery_agent_s_image"
                android:textColor="@color/purple_500"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/txt_general_details"
                app:layout_constraintTop_toBottomOf="@id/edit_delivery_agent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_agent_images"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_background"
                android:orientation="horizontal"
                android:padding="5dp"
                app:layout_constraintEnd_toEndOf="@id/constraint_1"
                app:layout_constraintStart_toStartOf="@id/constraint_1"
                app:layout_constraintTop_toBottomOf="@id/txt_delivery_agent_img"
                app:layout_constraintWidth_percent="0.9" />

            <ImageView
                android:id="@+id/camera_delivery_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:contentDescription="@string/camera"
                android:src="@drawable/baseline_camera_alt_24"
                app:layout_constraintBottom_toBottomOf="@id/recycler_agent_images"
                app:layout_constraintEnd_toEndOf="@id/recycler_agent_images"
                app:layout_constraintTop_toTopOf="@id/recycler_agent_images" />

            <TextView
                android:id="@+id/txt_delivery_agent_signature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/_6_delivery_agent_s_signature"
                android:textColor="@color/purple_500"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/txt_general_details"
                app:layout_constraintTop_toBottomOf="@id/recycler_agent_images" />

            <ImageView
                android:id="@+id/img_delivery_agent_signature"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_text_background"
                android:contentDescription="@string/signature"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="@id/constraint_1"
                app:layout_constraintStart_toStartOf="@id/constraint_1"
                app:layout_constraintTop_toBottomOf="@id/txt_delivery_agent_signature"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintWidth_percent="0.9" />

            <TextView
                android:id="@+id/txt_add_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_add_bg"
                android:gravity="center"
                android:paddingStart="15dp"
                android:paddingTop="5dp"
                android:paddingEnd="15dp"
                android:paddingBottom="5dp"
                android:text="@string/add"
                android:textColor="@color/purple_500"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@id/img_delivery_agent_signature"
                app:layout_constraintEnd_toEndOf="@id/img_delivery_agent_signature"
                app:layout_constraintHorizontal_bias="0.95"
                app:layout_constraintStart_toStartOf="@id/img_delivery_agent_signature"
                app:layout_constraintTop_toTopOf="@id/img_delivery_agent_signature"
                app:layout_constraintVertical_bias="0.95" />

            <TextView
                android:id="@+id/txt_invoice_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/_7_invoice_s_image"
                android:textColor="@color/purple_500"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/txt_general_details"
                app:layout_constraintTop_toBottomOf="@id/img_delivery_agent_signature" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_invoice_images"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_background"
                android:orientation="horizontal"
                android:padding="5dp"
                app:layout_constraintEnd_toEndOf="@id/constraint_1"
                app:layout_constraintStart_toStartOf="@id/constraint_1"
                app:layout_constraintTop_toBottomOf="@id/txt_invoice_img"
                app:layout_constraintWidth_percent="0.9" />

            <ImageView
                android:id="@+id/camera_invoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:contentDescription="@string/camera"
                android:src="@drawable/baseline_camera_alt_24"
                app:layout_constraintBottom_toBottomOf="@id/recycler_invoice_images"
                app:layout_constraintEnd_toEndOf="@id/recycler_invoice_images"
                app:layout_constraintTop_toTopOf="@id/recycler_invoice_images" />

            <Button
                android:id="@+id/btn_next"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_bg"
                android:text="@string/next"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/constraint_1"
                app:layout_constraintEnd_toEndOf="@id/constraint_1"
                app:layout_constraintStart_toStartOf="@id/constraint_1"
                app:layout_constraintTop_toBottomOf="@id/recycler_invoice_images"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintWidth_percent="0.45" />

            <TextView
                android:id="@+id/txt_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text=""
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@id/constraint_1"
                app:layout_constraintStart_toStartOf="@id/constraint_1"
                app:layout_constraintTop_toBottomOf="@id/btn_next" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</FrameLayout>
