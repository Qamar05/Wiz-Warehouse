<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_3.QuestionThreeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_question_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/q3_a_please_mention_your_name"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/constraint_1"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="@id/edit_name"
            app:layout_constraintTop_toTopOf="@id/constraint_1"
            app:layout_constraintVertical_bias="0.1" />

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:autofillHints=""
            android:background="@drawable/edit_text_background"
            android:hint="@string/enter_your_name"
            android:inputType="text"
            android:textSize="16sp"
            android:maxLength="25"
            android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:padding="10dp"
            android:textColor="@color/black_2"
            android:textColorHint="@color/light_grey"
            app:layout_constraintEnd_toEndOf="@id/constraint_1"
            app:layout_constraintHeight_percent="0.07"
            app:layout_constraintStart_toStartOf="@id/constraint_1"
            app:layout_constraintTop_toBottomOf="@id/txt_question_one"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintWidth_percent="0.85" />

        <TextView
            android:id="@+id/txt_question_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/b_please_select_your_gender"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="@id/edit_name"
            app:layout_constraintTop_toBottomOf="@id/edit_name"
            app:layout_constraintVertical_bias="0.1" />

        <Spinner
            android:id="@+id/spin_gender"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_background"
            android:text="@string/enter_your_name"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/black_2"
            app:layout_constraintEnd_toEndOf="@id/constraint_1"
            app:layout_constraintHeight_percent="0.07"
            app:layout_constraintStart_toStartOf="@id/constraint_1"
            app:layout_constraintTop_toBottomOf="@id/txt_question_two"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintWidth_percent="0.85" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:contentDescription="@string/img_down"
            android:src="@drawable/baseline_keyboard_arrow_down_24"
            app:layout_constraintBottom_toBottomOf="@id/spin_gender"
            app:layout_constraintEnd_toEndOf="@id/spin_gender"
            app:layout_constraintHorizontal_bias="0.95"
            app:layout_constraintStart_toStartOf="@id/spin_gender"
            app:layout_constraintTop_toTopOf="@id/spin_gender" />


        <TextView
            android:id="@+id/txt_previous"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_previous_bg"
            android:gravity="center"
            android:text="@string/previous"
            android:textColor="@color/purple_500"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/constraint_1"
            app:layout_constraintEnd_toEndOf="@id/constraint_1"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="@id/constraint_1"
            app:layout_constraintTop_toTopOf="@id/constraint_1"
            app:layout_constraintVertical_bias="0.9"
            app:layout_constraintWidth_percent="0.45" />

        <TextView
            android:id="@+id/txt_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="@id/constraint_1"
            app:layout_constraintEnd_toEndOf="@id/constraint_1"
            app:layout_constraintBottom_toBottomOf="@id/constraint_1"
            app:layout_constraintVertical_bias="0.97"
            app:layout_constraintTop_toTopOf="@id/constraint_1"
            />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/button_bg"
            android:gravity="center"
            android:text="@string/next"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/constraint_1"
            app:layout_constraintEnd_toEndOf="@id/constraint_1"
            app:layout_constraintHorizontal_bias="0.95"
            app:layout_constraintStart_toStartOf="@id/constraint_1"
            app:layout_constraintTop_toTopOf="@id/constraint_1"
            app:layout_constraintVertical_bias="0.9"
            app:layout_constraintWidth_percent="0.45" />



    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>