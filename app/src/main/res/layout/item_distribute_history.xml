<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_inventory"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_constraint"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="ID 123zk"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Laptop (ABC12)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@id/txt_id"
                app:layout_constraintTop_toBottomOf="@id/txt_id" />

            <TextView
                android:id="@+id/txt_activity_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Noida"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@id/txt_id"
                app:layout_constraintTop_toBottomOf="@id/txt_product_name" />

            <TextView
                android:id="@+id/txt_supervisor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="By: Supervisor name"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@id/txt_units"
                app:layout_constraintTop_toBottomOf="@id/txt_product_name" />

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:text="10:00 AM"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@id/layout_constraint"
                app:layout_constraintTop_toTopOf="@id/layout_constraint" />

            <TextView
                android:id="@+id/txt_units"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="25 units"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@id/txt_time"
                app:layout_constraintTop_toBottomOf="@id/txt_time" />

            <TextView
                android:id="@+id/txt_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/btn_previous_bg"
                android:paddingStart="10dp"
                android:paddingTop="2dp"
                android:paddingEnd="10dp"
                android:paddingBottom="2dp"
                android:text="View"
                android:textColor="@color/purple_500"
                app:layout_constraintStart_toStartOf="@id/txt_id"
                app:layout_constraintTop_toBottomOf="@id/txt_activity_name" />

            <TextView
                android:id="@+id/txt_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/btn_previous_bg"
                android:paddingStart="10dp"
                android:paddingTop="2dp"
                android:paddingEnd="10dp"
                android:paddingBottom="2dp"
                android:text="Return"
                android:textColor="@color/purple_500"
                app:layout_constraintEnd_toEndOf="@id/txt_supervisor_name"
                app:layout_constraintTop_toBottomOf="@id/txt_activity_name" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>