<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragment_1.QuestionOneFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_question_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/q1_a_can_you_please_tell_me_your_age"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@id/constraint_1"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/constraint_1"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/edit_age"
            app:layout_constraintTop_toTopOf="@id/constraint_1"
            app:layout_constraintVertical_bias="0.1" />

        <EditText
            android:id="@+id/edit_age"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:autofillHints=""
            android:background="@drawable/edit_text_background"
            android:hint="@string/enter_your_age"
            android:inputType="number"
            android:maxLength="2"
            android:padding="10dp"
            android:textSize="16sp"
            android:textColor="@color/black_2"
            android:textColorHint="@color/light_grey"
            app:layout_constraintEnd_toEndOf="@id/constraint_1"
            app:layout_constraintHeight_percent="0.07"
            app:layout_constraintStart_toStartOf="@id/constraint_1"
            app:layout_constraintTop_toBottomOf="@id/txt_question_one"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintWidth_percent="0.85" />

        <TextView
            android:id="@+id/txt_question_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/b_do_you_smoke"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="@id/edit_age"
            app:layout_constraintTop_toBottomOf="@id/edit_age"
            app:layout_constraintVertical_bias="0.1" />

        <RadioButton
            android:id="@+id/radio_yes"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:autofillHints=""
            android:textSize="16sp"
            android:background="@drawable/edit_text_background"
            android:text="@string/yes"
            android:textColor="@color/light_grey"
            app:layout_constraintEnd_toEndOf="@id/constraint_1"
            app:layout_constraintHeight_percent="0.07"
            app:layout_constraintStart_toStartOf="@id/constraint_1"
            app:layout_constraintTop_toBottomOf="@id/txt_question_two"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintWidth_percent="0.85" />

        <RadioButton
            android:id="@+id/radio_no"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:autofillHints=""
            android:background="@drawable/edit_text_background"
            android:text="@string/no"
            android:textSize="16sp"
            android:textColor="@color/light_grey"
            app:layout_constraintEnd_toEndOf="@id/constraint_1"
            app:layout_constraintHeight_percent="0.07"
            app:layout_constraintStart_toStartOf="@id/constraint_1"
            app:layout_constraintTop_toBottomOf="@id/radio_yes"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintWidth_percent="0.85" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textSize="16sp"
            android:background="@drawable/button_bg"
            android:text="@string/next"
            app:layout_constraintBottom_toBottomOf="@id/constraint_1"
            app:layout_constraintEnd_toEndOf="@id/constraint_1"
            app:layout_constraintStart_toStartOf="@id/constraint_1"
            app:layout_constraintTop_toTopOf="@id/constraint_1"
            app:layout_constraintVertical_bias="0.9"
            app:layout_constraintWidth_percent="0.45" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textSize="16sp"
            android:background="@drawable/button_bg"
            android:text="@string/submit"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/constraint_1"
            app:layout_constraintEnd_toEndOf="@id/constraint_1"
            app:layout_constraintStart_toStartOf="@id/constraint_1"
            app:layout_constraintTop_toTopOf="@id/constraint_1"
            app:layout_constraintVertical_bias="0.9"
            app:layout_constraintWidth_percent="0.45" />

        <TextView
            android:id="@+id/txt_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="@id/constraint_1"
            app:layout_constraintEnd_toEndOf="@id/constraint_1"
            app:layout_constraintBottom_toBottomOf="@id/constraint_1"
            app:layout_constraintVertical_bias="0.97"
            app:layout_constraintTop_toTopOf="@id/constraint_1"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>